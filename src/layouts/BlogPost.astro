---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate } = Astro.props;
---

<html lang="ja">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main class="w-full m-0">
			<article>
				<div class="w-4/5 max-w-[calc(100%-2em)] mx-auto p-4 text-white marker:text-white">
					<div class="mb-4 py-4 text-center">
						<div class="mb-2">
							<FormattedDate date={pubDate} />
							{updatedDate && (
								<div class="italic text-white">
									<span>Last updated on&nbsp;</span>
									<FormattedDate date={updatedDate} />
								</div>
							)}
						</div>
						<h1 class="m-0 text-3xl md:text-4xl">{title}</h1>
						<hr class="border-t border-gray-200 mt-3" />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
